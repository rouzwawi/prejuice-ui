            div(ng-include="'slide-template.html'")
          .slide-animate(ng-switch-when='14')
            div(ng-include="'slide-template.html'")
          .slide-animate(ng-switch-when='15')
            div(ng-include="'slide-template.html'")
          .slide-animate(ng-switch-when='16')
            div(ng-include="'slide-template.html'")
          .slide-animate(ng-switch-when='17')
            div(ng-include="'slide-template.html'")
          .slide-animate(ng-switch-when='18')
            div(ng-include="'slide-template.html'")
          .slide-animate(ng-switch-when='19')
            div(ng-include="'slide-template.html'")
        
    .row(ng-switch-when='completed')
      .jumbotron
        h1 Good Job!
        p.lead
          | Ready for the results?
        p
          a.btn.btn-lg.btn-success(ng-click='showResult()') Let me see!
