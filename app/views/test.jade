.container
  h3 test {{testVar}}
  div
    button(ng-click='increase()') Increase
    button(ng-click='decrease()') Decrease
  
  .my-switch-container(ng-switch='', on='article', ng-animate='animate', style='position:relative')
    .my-switch-animation(ng-switch-when='1', style='background-color:red')
      h1 One
    .my-switch-animation(ng-switch-when='2', style='background-color:green')
      h1 Two
    .my-switch-animation(ng-switch-when='3', style='background-color:blue')
      h1 Three
    .my-switch-animation(ng-switch-when='4', style='background-color:purple')
      h1 Four
  